{% if site.bib_search %}
  <script src="{{ '/assets/js/bibsearch.js' | relative_url | bust_file_cache }}" type="module"></script>
  <style>
    .search.bibsearch-form-input {
      border: 2px solid;
      border-radius: 4px;
      font-size: 16px;
      padding: 10px 20px;
      margin: 10px 0;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease-in-out;
    }

    .search.bibsearch-form-input:focus {
      border-color: {$gg-green-color};
      box-shadow: 0 0 0 3px rgba({$gg-green-color}, 0.5);
      outline: none;
    }
  </style>
  <input type="text" id="bibsearch" spellcheck="false" autocomplete="off" class="search bibsearch-form-input" placeholder="Type to filter">
{% endif %}
